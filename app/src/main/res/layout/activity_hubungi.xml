<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".HubungiActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HUBUNGI VIA WHATSAPP"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#F1C237"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo3"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editnama"
        android:inputType="textPersonName"
        android:hint="Nama Anda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editemail"
        android:inputType="textEmailAddress"
        android:hint="E-Mail Anda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editNPM"
        android:inputType="number"
        android:hint="Kode Mata Kuliah Anda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editpesan"
        android:gravity="top|left"
        android:hint="Tuliskan Pesan Anda Di Sini"
        android:layout_width="match_parent"
        android:layout_height="135dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnkirim"
        android:text="K I R I M"/>

</LinearLayout>